<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcoolor"
    tools:context=".ApplyLoan.SrudentLoan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/lin1">
        <ImageView
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back"
            android:id="@+id/backbtn"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/lin1"
        android:id="@+id/lin2"
        android:layout_marginTop="@dimen/_50sdp"
        android:gravity="center"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Information"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/archivo_semibold"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lin2"
        android:layout_above="@id/bannerbottom"
        android:layout_marginTop="@dimen/_30sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

               <LinearLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/lin1"
        android:layout_marginBottom="35sp"

        android:background="@color/white"
        android:orientation="horizontal">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loader"
            android:layout_below="@id/lin1"
            android:indeterminateDrawable="@drawable/progress_design"
            />
    </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/student_loans_are_offered_to_college_studentsand_their_families_tohigher_education_there_are_two_main_types_federal_student_loans_and_private_studentloans_federally_funded_loans_are_better_asthey_typically_come_with_lower_interest_ratesand_more_borrower_friendly_repaymentterms_an_education_loan_is_a_sum_of_moneyborrowed_to_finance_post_secondaryeducation_or_higher_education_relatedexpenses_education_loans_are_intendedto_cover_the_cost_of_tuition_books_andsupplies_and_living_expenses_while_thedegree_payments_are_often_deferred_whilestudents_are_in_college_and_depending_onthe_lender_sometimes_they_are_deferredfor_an_additional_six_month_period_afterearning_a_degree_this_period_is_sometimesreferred_to_as_a_graceperiod_educationloans_are_issued_for_the_purpose_of_attendingan_accredited_college_or_a_university_andpursuing_an_academic_degree_educationloans_can_be_obtained_from_the_governmentor_through_private_sector_lendingsources_federal_loans_often_offer_lowerinterest_rates_and_some_also_offer_subsidizedinterest_private_sector_loans_generallyfollow_more_of_a_traditional_lending_processfor_application_with_rates_that_are_typicallyhigher_than_federal_government_loans"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/archivo_semibold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="@dimen/_15sdp"
                >

              <com.google.android.material.button.MaterialButton
                    android:id="@+id/applyforloan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:backgroundTint="@color/btncolor"
                    android:text="Apply now"
                    android:textAllCaps="false" />

                    <com.google.android.material.button.MaterialButton
                    android:id="@+id/getnow"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="end"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:backgroundTint="@color/btncolor"
                    android:text="Get Now"
                    android:visibility="gone"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/bannerbottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loaderbottom"
            android:indeterminateDrawable="@drawable/progress_design"
            />
    </LinearLayout>

</RelativeLayout>