<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcoolor"
    tools:context=".ApplyLoan.AutoLoan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/lin1">
        <ImageView
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back"
            android:id="@+id/backbtn"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/lin1"
        android:id="@+id/lin2"
        android:layout_marginTop="@dimen/_50sdp"
        android:gravity="center"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Loan Information"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/archivo_semibold"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lin2"
        android:layout_above="@id/bannerbottom"
        android:layout_marginTop="@dimen/_30sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

               <LinearLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/lin1"
        android:layout_marginBottom="35sp"

        android:background="@color/white"
        android:orientation="horizontal">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loader"
            android:layout_below="@id/lin1"
            android:indeterminateDrawable="@drawable/progress_design"
            />
    </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like_mortgages_auto_loans_are_tied_toyour_property_they_can_help_you_afforda_vehicle_but_you_risk_losing_the_car_ifyou_miss_payments_this_type_of_loanmay_be_distributed_by_a_bank_or_by_thecar_dealership_directly_but_you_shouldunderstand_that_while_loans_from_thdealership_may_be_more_convenient_they_often_carry_higher_interest_rates_andultimately_cost_more_overall_an_auto_loan_is_taken_by_borrowersto_purchase_a_new_or_used_private_orcommercial_vehicle_auto_loans_are_securedloans_where_the_vehicle_itself_is_used_as_acollateral_it_is_offered_by_lenders_for_newcars_used_cars_two_wheelers_generallycalled_a_two_wheeler_loan_and_commercialvehicles_generally_called_a_commercialvehicle_loan_lenders_fix_interest_rates_depending_on_thetype_of_vehicle_and_loan_amount_interestrates_are_usually_fixed_for_auto_loans_it_is_not_always_necessary_to_go_with_thebank_your_vehicle_dealer_suggests_you_canalways_go_to_another_lender_if_they_offerbetter_loan_terms_therefore_always_do_athorough_research_by_comparing_lendersand_their_rates_before_finalizing_a_lender"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/archivo_semibold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="@dimen/_15sdp"
                >

                 <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"

                    android:layout_gravity="end"
                     android:backgroundTint="@color/btncolor"
                    android:text="Apply now"
                    android:id="@+id/applyforloan"
android:layout_marginHorizontal="@dimen/_15sdp"
                    android:textAllCaps="false" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="end"
                    android:id="@+id/getnow"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:backgroundTint="@color/btncolor"
                    android:text="Get Now"
                    android:visibility="gone"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/bannerbottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loaderbottom"
            android:indeterminateDrawable="@drawable/progress_design"
            />
    </LinearLayout>
</RelativeLayout>